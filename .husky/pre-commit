  echo "ğŸ“ Detected changes in postgrest-js common types..."
  echo "ğŸ”„ Running codegen to sync types..."

  npm run codegen

  # Add the generated files to the commit
  git add packages/core/supabase-js/src/lib/rest/types/common/

  echo "âœ… Generated types have been updated and staged"
fi

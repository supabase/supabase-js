{
  "include": ["src", "test"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "outDir": "dist/cjs",
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES2017",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "noImplicitOverride": false,
    "isolatedModules": false
  }
}
